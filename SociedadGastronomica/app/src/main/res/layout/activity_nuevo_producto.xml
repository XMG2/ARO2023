<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sociedadgastronomica.NuevoProductoActivity">

  <Button
      android:id="@+id/addnamebutton"
      style="@style/Theme.MaterialDesign"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="addProducto"
      android:text="ACEPTAR"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.916"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.591" />


  <EditText
      android:id="@+id/nombreProducto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="textShortMessage|text"
      android:minHeight="48dp"
      android:hint="Inserte nombre"
      app:layout_constraintBottom_toTopOf="@+id/precioProducto"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.459"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.502" />

  <EditText
      android:id="@+id/precioProducto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number|numberDecimal"
      android:minHeight="48dp"

      android:hint="1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.459"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.411" />

  <Button
      android:id="@+id/cancelar"
      style="@style/Theme.MaterialDesign"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="168dp"
      android:onClick="cancelar"
      android:text="CANCELAR"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/addnamebutton"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.592" />
  </androidx.constraintlayout.widget.ConstraintLayout>